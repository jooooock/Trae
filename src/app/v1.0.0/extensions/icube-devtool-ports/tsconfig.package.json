{
	"extends": "@gulu/style/tsconfig-gulu.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"declaration": true,
		"module": "CommonJS",
		"target": "ES2020",
		"allowJs": true,
		"lib": [
			"DOM",
			"ESNext",
			"ES2015",
			"ES2016",
			"ES2017",
			"ES2018",
			"ES2019",
			"ES2020",
			"ES2021",
			"ES2022",
			"ES2023"
		],
		"jsx": "react",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false
	},
	"types": [
		"dist/index.browser.d.ts",
		"dist/index.d.ts"
	],
	"include": [
		"src"
	],
	"exclude": [
		"src/__tests__"
	]
}